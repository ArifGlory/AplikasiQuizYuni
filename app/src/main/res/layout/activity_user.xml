<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlEditProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green_300">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="User Profile"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="MissingPrefix" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lineBody"
        android:layout_marginTop="30dp"
        android:layout_below="@id/rlEditProfile"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:textSize="14sp"
            android:layout_centerInParent="true"
            android:text="Nama"
            tools:ignore="MissingPrefix" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bg_editfield"
            android:id="@+id/edName"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:hint="Nama"
            android:inputType="text"
            android:textSize="12sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            tools:ignore="MissingPrefix" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            android:text="Class"
            tools:ignore="MissingPrefix" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bg_editfield"
            android:id="@+id/edClass"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:hint="Class"
            android:textSize="12sp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            tools:ignore="MissingPrefix" />


    </LinearLayout>

    <Button
        android:id="@+id/btnSave"
        style="@style/buttonGame"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineBody"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Save" />

</RelativeLayout>